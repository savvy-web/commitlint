{
	"name": "@savvy-web/commitlint",
	"version": "0.1.1",
	"private": true,
	"description": "Dynamic, intelligent commitlint configuration with auto-detection of DCO, workspace scopes, and versioning strategies.",
	"keywords": [
		"commitlint",
		"conventional-commits",
		"commit-lint",
		"git-hooks",
		"dco",
		"developer-certificate-of-origin",
		"monorepo",
		"workspaces",
		"effect-ts"
	],
	"homepage": "https://github.com/savvy-web/commitlint#readme",
	"bugs": {
		"url": "https://github.com/savvy-web/commitlint/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/savvy-web/commitlint.git"
	},
	"license": "MIT",
	"author": {
		"name": "C. Spencer Beggs",
		"email": "spencer@savvyweb.systems",
		"url": "https://savvyweb.systems"
	},
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./static": "./src/static.ts",
		"./prompt": "./src/prompt/index.ts",
		"./formatter": "./src/formatter/index.ts"
	},
	"bin": {
		"savvy-commit": "./src/bin/cli.ts"
	},
	"scripts": {
		"build": "turbo run build:dev build:prod --log-order=grouped",
		"build:dev": "rslib build --config-loader native --env-mode dev",
		"build:inspect": "rslib inspect --config-loader native --env-mode npm --verbose",
		"build:prod": "rslib build --config-loader native --env-mode npm",
		"ci:build": "CI=\"true\" turbo run build:dev build:prod --log-order=grouped --output-logs=full",
		"ci:test": "CI=\"true\" vitest run --coverage",
		"ci:version": "changeset version && biome format --write .",
		"lint": "biome check --max-diagnostics=none",
		"lint:fix": "biome check --write --max-diagnostics=none",
		"lint:fix:unsafe": "biome check --write --unsafe --max-diagnostics=none",
		"lint:md": "markdownlint-cli2 '**/*.{md,mdx}' --config './lib/configs/.markdownlint-cli2.jsonc'",
		"lint:md:fix": "markdownlint-cli2  --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"prepare": "husky",
		"test": "vitest run",
		"test:ai": "vitest run --reporter=basic",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"typecheck": "turbo run types:check --log-prefix=none --log-order=grouped",
		"types:check": "tsgo --noEmit"
	},
	"dependencies": {
		"@effect/cli": "^0.73.1",
		"@effect/platform": "^0.94.2",
		"@effect/platform-node": "^0.104.1",
		"effect": "^3.19.15",
		"workspace-tools": "^0.40.4",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@commitlint/cz-commitlint": "^20.4.1",
		"@commitlint/lint": "^20.4.1",
		"@commitlint/types": "^20.4.0",
		"@microsoft/api-extractor": "^7.56.0",
		"@rslib/core": "^0.19.4",
		"@savvy-web/lint-staged": "^0.1.3",
		"@savvy-web/rslib-builder": "^0.8.0",
		"@types/node": "^25.2.0",
		"@typescript/native-preview": "^7.0.0-dev.20260202.1",
		"@vitest/coverage-v8": "^4.0.18",
		"husky": "^9.1.7",
		"turbo": "^2.8.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"peerDependencies": {
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@commitlint/cz-commitlint": "^20.4.1",
		"husky": "^9.1.7"
	},
	"peerDependenciesMeta": {
		"@commitlint/cli": {
			"optional": false
		},
		"@commitlint/config-conventional": {
			"optional": false
		},
		"@commitlint/cz-commitlint": {
			"optional": true
		},
		"husky": {
			"optional": false
		}
	},
	"packageManager": "pnpm@10.28.2",
	"devEngines": {
		"packageManager": {
			"name": "pnpm",
			"version": "10.28.2",
			"onFail": "ignore"
		},
		"runtime": [
			{
				"name": "node",
				"version": "24.11.0",
				"onFail": "ignore"
			}
		]
	},
	"publishConfig": {
		"access": "public",
		"dist": "dist/dev",
		"linkDirectory": true,
		"targets": [
			{
				"protocol": "npm",
				"registry": "https://npm.pkg.github.com/",
				"directory": "dist/npm",
				"access": "public",
				"provenance": true
			},
			{
				"protocol": "npm",
				"registry": "https://registry.npmjs.org/",
				"directory": "dist/npm",
				"access": "public",
				"provenance": true
			}
		]
	}
}
